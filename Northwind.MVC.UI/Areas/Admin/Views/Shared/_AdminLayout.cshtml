                        <li class="nav-header">Other</li>
                        <li class="nav-item">
                            <a draggable="false" href="/Admin/Customers" class="nav-link @LinkActivate("Customers")">
                                <i class="nav-icon fas fa-user-check"></i>
                                <p>
                                    Customers
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a draggable="false" href="/Admin/Employees" class="nav-link @LinkActivate("Employees")">
                                <i class="nav-icon fas fa-id-card"></i>
                                <p>
                                    Employees
                                </p>
                            </a>
                        </li>
                        <li class="nav-header">Companies</li>
                        <li class="nav-item">
