@model Northwind.Entities.Concrete.Supplier
@{
    ViewData["Title"] = "Add Shipper";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <!-- left column -->
    <div class="col-md-12">
        <!-- jquery validation -->
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Add Supplier</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form method="post" action="/Admin/Suppliers/Add" id="supplierAddForm">
                <div class="card-body">
                    <div class="form-group">
                        @Html.LabelFor(x => x.CompanyName, "Company Name")
                        @Html.TextBoxFor(x => x.CompanyName, new { @class = "form-control", placeholder = "Enter Company Name" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(x => x.ContactName, "Contact Name")
                        @Html.TextBoxFor(x => x.ContactName, new { @class = "form-control", placeholder = "Enter Contact Name" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(x => x.ContactTitle, "Contact Title")
                        @Html.TextBoxFor(x => x.ContactTitle, new { @class = "form-control", placeholder = "Enter Contact Title" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(x => x.Address, "Address")
                        @Html.TextBoxFor(x => x.Address, new { @class = "form-control", placeholder = "Enter Address" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(x => x.Region, "Region")
                        @Html.TextBoxFor(x => x.Region, new { @class = "form-control", placeholder = "Enter Region" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(x => x.City, "City")
                        @Html.TextBoxFor(x => x.City, new { @class = "form-control", placeholder = "Enter City" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(x => x.Country, "Country")
                        @Html.TextBoxFor(x => x.Country, new { @class = "form-control", placeholder = "Enter Country" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(x => x.PostalCode, "Postal Code")
                        @Html.TextBoxFor(x => x.PostalCode, new { @class = "form-control", placeholder = "Enter Postal Code" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(x => x.Phone, "Phone")
                        @Html.TextBoxFor(x => x.Phone, new { @class = "form-control", placeholder = "Enter Phone" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(x => x.Fax, "Fax")
                        @Html.TextBoxFor(x => x.Fax, new { @class = "form-control", placeholder = "Enter Fax" })
                    </div>
                </div>
                <!-- /.card-body -->
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary float-left">Save</button>
                    <button type="reset" class="btn btn-secondary float-right">Clear</button>
                </div>
            </form>
        </div>
        <!-- /.card -->
    </div>
    <!--/.col (left) -->
</div>

@section Scripts{
    <script src="~/theme/plugins/jquery-validation/jquery.validate.min.js"></script>
    <script src="~/theme/plugins/jquery-validation/additional-methods.min.js"></script>
    <script>
        $(function () {
            $('#supplierAddForm').validate({
                rules: {
                    CompanyName: {
                        required: true,
                        minlength: 3,
                        maxlength: 40
                    },
                    ContactName: {
                        required: true,
                        minlength: 3,
                        maxlength: 30
                    },
                    Address: {
                        required: true,
                        maxlength: 60
                    },
                    City: {
                        required: true
                    },
                    Country: {
                        required: true
                    },
                    PostalCode: {
                        required: true,
                    },
                    Phone: {
                        required: true
                    },
                },
                errorElement: 'span',
                errorPlacement: function (error, element) {
                    error.addClass('invalid-feedback');
                    element.closest('.form-group').append(error);
                },
                highlight: function (element, errorClass, validClass) {
                    $(element).addClass('is-invalid');
                },
                unhighlight: function (element, errorClass, validClass) {
                    $(element).removeClass('is-invalid');
                }
            });
        });</script>
}