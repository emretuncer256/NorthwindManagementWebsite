@model Northwind.Entities.Concrete.Customer
@{
    ViewData["Title"] = "View - " + Model.CustomerId;
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="row">
    <div class="col-md-6">

        <!-- Profile Image -->
        <div class="card card-primary card-outline">
            <div class="card-body box-profile">

                <h3 class="profile-username text-center">@Model.CompanyName</h3>
                <ul class="list-group list-group-unbordered mb-3">
                    <li class="list-group-item">
                        <b>Contact Title</b> <a class="float-right">@Model.ContactTitle</a>
                    </li>
                    <li class="list-group-item">
                        <b>Contact Name</b> <a class="float-right">@Model.ContactName</a>
                    </li>
                    <li class="list-group-item">
                        <b>Phone</b> <a class="float-right">@Model.Phone</a>
                    </li>
                </ul>

                <a href="/Admin/Customers/Edit/@Model.CustomerId" class="btn btn-warning btn-block"><b>Edit</b></a>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
    <div class="col-md-6">
        <!-- About Me Box -->
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">About - @Model.CompanyName</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <strong><i class="fas fa-book mr-1"></i> Address</strong>

                <p class="text-muted">
                    @Model.Address
                </p>

                <hr>

                @if (Model.Region != null)
                {
                    <strong><i class="fas fa-building mr-1"></i> Region</strong>

                    <p class="text-muted">
                        @Model.Region
                    </p>

                    <hr>
                }

                <strong><i class="fas fa-map-marker-alt mr-1"></i> Location</strong>

                <p class="text-muted">@Model.City / @Model.Country</p>

                <hr>

                <strong><i class="fas fa-mail-bulk mr-1"></i> Postal Code</strong>

                <p class="text-muted">@Model.PostalCode</p>

                <hr>

                <strong><i class="fas fa-fax mr-1"></i> Fax</strong>

                <p class="text-muted">@Model.Fax</p>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
</div>
@section Styles{
    <!-- Toastr -->
    <link rel="stylesheet" href="~/theme/plugins/toastr/toastr.min.css">
}

@section Scripts{
    <!-- Toastr -->
    <script src="~/theme/plugins/toastr/toastr.min.js"></script>
    <script>
        $(function () {
            toastr.options = {
                "closeButton": true,
                "progressBar": true,
            }
        });
    </script>
    @if (TempData["customerSuccessUpdateMessage"] != null)
    {
        <script>
        $(function () {
            toastr.success('@TempData["customerSuccessUpdateMessage"]')
        });
        </script>
    }
}