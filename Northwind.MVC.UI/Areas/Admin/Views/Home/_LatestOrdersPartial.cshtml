@using Northwind.Entities.DTOs
@model List<OrderDetailDto>
<div class="card">
    <div class="card-header border-transparent">
        <h3 class="card-title">Latest Orders</h3>

        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                <i class="fas fa-minus"></i>
            </button>
            <button type="button" class="btn btn-tool" data-card-widget="remove">
                <i class="fas fa-times"></i>
            </button>
        </div>
    </div>
    <!-- /.card-header -->
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table m-0">
                <thead>
                    <tr>
                        <th>Order ID</th>
                        <th>Company Name</th>
                        <th>Contact Name</th>
                        <th>Phone</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><a class="link-primary" href="Admin/Orders/View/@item.OrderId">@item.OrderId</a></td>
                            <td><a class="link-success" href="Admin/Customers/View/@item.CustomerID">@item.CustomerCompany</a></td>
                            <td>@item.CustomerContactName</td>
                            <td>
                                <div class="sparkbar" data-color="#00a65a" data-height="20">@item.CustomerPhone</div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <!-- /.table-responsive -->
    </div>
    <!-- /.card-body -->
    <div class="card-footer clearfix">
        <a href="/Admin/Orders/Add" class="btn btn-sm btn-info float-left">Add New Order</a>
        <a href="/Admin/Orders" class="btn btn-sm btn-secondary float-right">View All Orders</a>
    </div>
    <!-- /.card-footer -->
</div>