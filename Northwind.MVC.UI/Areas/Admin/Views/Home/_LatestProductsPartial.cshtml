@using Northwind.Entities.DTOs
@using Northwind.MVC.UI.Helper
@model List<ProductDetailDto>

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Recently Added Products</h3>

        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                <i class="fas fa-minus"></i>
            </button>
            <button type="button" class="btn btn-tool" data-card-widget="remove">
                <i class="fas fa-times"></i>
            </button>
        </div>
    </div>
    <!-- /.card-header -->
    <div class="card-body p-0">
        <ul class="products-list product-list-in-card pl-2 pr-2">
            @foreach (var item in Model)
            {
                <li class="item">
                    <div class="product-img">
                        <img src="/theme/dist/img/default-150x150.png" alt="Product Image" class="img-size-50">
                    </div>
                    <div class="product-info">
                        <a href="/Admin/Products/View/@item.ProductId" class="product-title" title="@item.ProductName">
                            @Helper.StringShorter(item.ProductName, 24)
                            <span class="badge badge-@Helper.RandomBSColor() float-right">$@Decimal.Round(item.UnitPrice, 1)</span>
                        </a>
                        <a href="/Admin/Products" class="product-description">
                            @item.CategoryName
                        </a>
                    </div>
                </li>
                <!-- /.item -->
            }
        </ul>
    </div>
    <!-- /.card-body -->
    <div class="card-footer text-center">
        <a href="/Admin/Products" class="uppercase">View All Products</a>
    </div>
    <!-- /.card-footer -->
</div>